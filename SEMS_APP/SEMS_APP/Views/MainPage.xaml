                    <Label Text="Mã Khách Hàng" Style="{StaticResource styleLableGreen}"  Grid.Column="0"></Label>
                    <Label Text="PP01000000001" Style="{StaticResource styleLableGreen}"  Grid.Column="1"></Label>
                    
